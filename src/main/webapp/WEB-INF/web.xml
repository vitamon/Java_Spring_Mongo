<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>SaveDataServlet</servlet-name>
        <servlet-class>in.ua.vitamon.web.SaveDataServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>in.ua.vitamon.web.StatServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>XmlStatServlet</servlet-name>
        <servlet-class>in.ua.vitamon.web.XmlStatServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SaveDataServlet</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/stat</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>XmlStatServlet</servlet-name>
        <url-pattern>/xml</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>