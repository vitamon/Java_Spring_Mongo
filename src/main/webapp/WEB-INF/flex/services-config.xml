<?xml version="1.0" encoding="UTF-8"?>

<services-config>

    <services>
        <service id="granite-service"
                 class="flex.messaging.services.RemotingService"
                 messageTypes="flex.messaging.messages.RemotingMessage">
            <destination id="statAmf">
                <channels>
                    <channel ref="my-graniteamf"/>
                </channels>

                <properties>
                    <scope>session</scope>
                    <source>in.ua.vitamon.services.AmfStatService</source>
                </properties>
            </destination>
        </service>
    </services>

    <factories>
        <factory id="springFactory"
                 class="org.granite.spring.SpringServiceFactory"/>
    </factories>

    <channels>
        <channel-definition id="my-graniteamf" class="mx.messaging.channels.AMFChannel">
            <!--            <endpoint
            uri="http://just-save-it.appspot.com/graniteamf/amf"
            class="flex.messaging.endpoints.AMFEndpoint"/>-->
            <endpoint
                    uri="http://localhost:9999/graniteamf/amf"
                    class="flex.messaging.endpoints.AMFEndpoint"/>
        </channel-definition>
    </channels>

</services-config>
